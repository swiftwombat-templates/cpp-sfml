{
	"configurations": [
		{
			"name": "Linux",
			"intelliSenseMode": "linux-gcc-x64",
			"cStandard": "c11",
			"cppStandard": "c++17",
			"includePath": [
				"${workspaceFolder}/src",
				"${workspaceFolder}/lib",
				"${workspaceFolder}/test",
				"~/SFML/include",
				"/usr/local/include/**",
				"/usr/include/**"
			],
			"defines": [
				"_DEBUG"
			],
			"forcedInclude": [
				"${workspaceFolder}/src/PCH.hpp"
			]
		},
		{
			"name": "Mac",
			"intelliSenseMode": "macos-clang-x64",
			"compilerPath": "/usr/bin/clang",
			"cStandard": "c11",
			"cppStandard": "c++17",
			"macFrameworkPath": [
				"/Library/Frameworks",
				"/System/Library/Frameworks"
			],
			"includePath": [
				"${workspaceFolder}/src",
				"${workspaceFolder}/lib",
				"${workspaceFolder}/test",
				"/usr/local/include/**"
			],
			"defines": [
				"_DEBUG"
			],
			"forcedInclude": [
				"${workspaceFolder}/src/PCH.hpp"
			]
		},
		{
			"name": "Win32",
			"intelliSenseMode": "windows-gcc-x86",
			"cStandard": "c11",
			"cppStandard": "c++17",
			"compilerPath": "C:/msys64/mingw32/bin/gcc.exe",
			"includePath": [
				"${workspaceFolder}/src",
				"${workspaceFolder}/lib",
				"${workspaceFolder}/test",
				"C:/SFML/include"
			],
			"defines": [
				"_DEBUG",
				"UNICODE",
				"_UNICODE"
			],
			"forcedInclude": [
				"${workspaceFolder}/src/PCH.hpp"
			]
		}
	],
	"version": 4
}